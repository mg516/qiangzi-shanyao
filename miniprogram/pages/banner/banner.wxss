/* miniprogram/pages/banner/banner.wxss */
@import "/style/csshake.wxss";
.swiper{height: 100vh;z-index: 2;position: relative;}
.switch-guide {
  position:absolute;
  z-index:10;
  right:0;
  left:0;
  margin:0 auto;
  bottom:16rpx;
  width:40rpx;
  height:32rpx;
  -webkit-animation:webSwipeTipAfter 2s infinite ease-in-out;
  animation:webSwipeTipAfter 2s infinite ease-in-out;
}
@keyframes webSwipeTipAfter{
  from {bottom:16rpx;opacity: 1;}
  to {bottom:40rpx;opacity: 0;}
}
.bgmusic{
    position: absolute;
    top: 30rpx;
    right: 25rpx;
    z-index: 10;
    width: 60rpx;
    height: 60rpx;
}
.bgmusic .music_icon.run{
  -webkit-animation: rotate2d 2s infinite linear;
  animation: rotate2d 2s infinite linear;
}
@keyframes rotate2d{
  from{-webkit-transform:rotate(360deg);}     
  to{-webkit-transform:rotate(0deg);}
}
.bgmusic .music_gif{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.phone{
  position: fixed;
  bottom: 30rpx;
  right: 10rpx;
  width: 80rpx;
  height: 80rpx;
  z-index: 2;
  animation-name: shake-hard;
  animation-duration: 100ms;
  animation-timing-function: ease-in-out;
  animation-iteration-count: infinite;
}